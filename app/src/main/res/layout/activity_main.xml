<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BDBDBD"
    android:id="@+id/mainActivityLayout"
    tools:context="com.example.android.waypointbasedindoornavigation.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目的地"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:paddingTop="40sp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/destination"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:ems="10"
        android:onClick="switchToListView"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:hint="請選擇目的地"/>

    <!--
        <EditText
            android:id="@+id/destination"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:ems="10"
            android:onClick="switchToListView"
            android:background="@drawable/edittext"
            android:gravity="center_horizontal"
            android:hint="請選擇目的地"/>
    -->

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startScanning"
        android:text="scan"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <Button
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#1976D2"
            android:onClick="startNavigation"
            android:text="開始導航"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="偏好設定"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserMode"
                android:paddingRight="40sp"
                android:onClick="onPreferenceButtonClicked"
                android:textSize="15dp"/>

            <RadioButton android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TesterMode"
                android:paddingRight="40sp"
                android:onClick="onPreferenceButtonClicked"
                android:textSize="15dp"/>


        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="電梯"
                android:paddingRight="40sp"
                android:onClick="onPreferenceButtonClicked"
                android:textSize="15dp"/>

            <RadioButton android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="樓梯"
                android:paddingRight="40sp"
                android:onClick="onPreferenceButtonClicked"
                android:textSize="15dp"/>


        </RadioGroup>





    </LinearLayout>

    <Button
        android:id="@+id/download_navigation_graoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="startDownload"
        android:text="下載導航地圖"
        android:textSize="20dp"/>





</LinearLayout>
